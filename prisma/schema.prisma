// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Recipe {
  id              String   @id @default(uuid())
  title           String
  slug            String   @unique
  ingredients     Json     // Array of structured ingredient objects
  steps           String[]
  cookTimeMinutes Int
  servings        Int?
  tags            String[]
  notes           String?
  rating          Int      // 1-5
  approvedBy      String
  status          String   @default("draft") // "draft" | "publish"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("recipes")
}

